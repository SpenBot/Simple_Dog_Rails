<h2>ADD NEW APPOINTMENT</h2>

<p> Make a new appointment with a daycare. </p>

<%= form_for [@appointment] do |f| %>


  <p> DOG: </p>
  <%= f.select :dog_id, Dog.all.map { |dog| [dog.name, dog.id] } %>

  <p> DAYCARE: </p>
  <%= f.select :daycare_id, Daycare.all.map { |daycare| [daycare.name, daycare.id] } %>
  </br>
  </br>

  <%= f.label :"Day" %>
  <%= f.text_field :day %>
  </br>
  </br>
  <%= f.label :"Month" %>
  <%= f.text_field :month %>
  </br>
  </br>
  <%= f.label :"Year" %>
  <%= f.text_field :year %>
  </br>
  </br>
  <%= f.label :"Hour" %>
  <%= f.text_field :hour %>
  </br>
  </br>


  <%= f.submit %>

<% end %>


