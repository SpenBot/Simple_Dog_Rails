<h2>EDIT OR DELETE DAYCARE PROFILE</h2>

<p> Edit your daycare information. </p>

<%= form_for @daycare do |f| %>

</br>
<%= f.label :"DAYCARE NAME" %>
<%= f.text_field :name %>
</br>
</br>
<%= f.label :"ADDRESS" %>
<%= f.text_field :address %>
</br>
</br>
<%= f.label :"CITY" %>
<%= f.text_field :city %>
</br>
</br>
<%= f.label :"DAYCARE RATE" %>
<%= f.text_field :price %>
</br>
</br>
<%= f.label :"PHOTO" %>
<%= f.text_field :photo_url %>
</br>
</br>
<%= f.submit %>

<% end %>

<div id="delete_daycare_link">
  <%= link_to "DELETE DAYCARE", daycare_path(@daycare), method: :delete %>
</div>
