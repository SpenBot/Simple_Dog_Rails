<div class="daycare_profile">

  <h2> DAYCARE PROFILE : </h2>

  <!-- <div class="dog_profile_pic">
    <img src="<%#= @dog.photo_url %>" height="300", width="300">
  </div> -->

  <img src="<%=@daycare.photo_url%>" height="400" width="
  600">

    <p>
      NAME: <%= @daycare.name %>
    </p>

    <p>
      ADDRESS: <%= @daycare.address %>, <%= @daycare.city %>
    </p>

    <p>
      PRICE: <%= @daycare.price %>
    </p>



    <% if current_user == @daycare.user %>
      <div id="edit_daycare_link">
        <%= link_to " [ EDIT / DELETE DAYCARE PROFILE ] ", edit_daycare_path(@daycare) %>
      </div>
    <% end %>

</div>





<% if current_user == @daycare.user %>

  <div class="dog_appointments_section">

    <h4> APPOINTMENTS : </h4>
    <%# if current_user == @daycare.user %>
      <div id="new_appointment_link">
        <%= link_to "[ MAKE A NEW APPOINTMENT ] ", new_appointment_path %>
      </div>
    <%# end %>


    <% @daycare.appointments.each do |appointment| %>

      <div class="listed_appointments">
        <p> DOG: <%= appointment.dog.name %></p>
        <p> DATE: <br> <%= appointment.weekday %> <br> <%= appointment.month %>, <%= appointment.day %></p>
        <p> TIME: <br> <%= appointment.time %> </p>
        <p> DOG USER: <%= appointment.dog.user.email %></p>
        <p> DAYCARE USER: <%= appointment.daycare.user.email %></p>

        <div id="edit_appointment_link">
          <%= link_to " [ EDIT / DELETE APPOINTMENT ] ", edit_appointment_path(appointment) %>
        </div>

      </div>

    <% end %>
  </div>

<% end %>
