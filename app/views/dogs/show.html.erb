<h2> DOG PROFILE : </h2>

<p>
  NAME: <%= @dog.name %>
</p>

<p>
  PHOTO: <%= @dog.photo_url %>
</p>

<p>
  OWNER: <%= @dog.owner %>
</p>

<p>
  BREED: <%= @dog.breed %>
</p>

<p>
  WEIGHT: <%= @dog.weight %>
</p>

<p>
  MEDICAL CHECK: <%= @dog.medical_check %>
</p>

<div id="edit_dog_link">
  <%= link_to " [ EDIT / DELETE DOG PROFILE ] ", edit_dog_path(@dog) %>
</div>

<h4> APPOINTMENTS : </h4>

<div id="dog_new_appointment_link">
  <%= link_to "[ MAKE A NEW APPOINTMENT ] ", new_dog_appointment_path(@dog) %>
</div>

  <% @dog.appointments.each do |appointment| %>
    <div class="dog_appointment">
    <p> LOCATION: <%= appointment.daycare.name %></p>
    <p> DAY: <%= appointment.day %></p>
    <p> MONTH: <%= appointment.month %></p>
    <p> YEAR: <%= appointment.year %></p>
    <p> HOUR: <%= appointment.hour %></p>

    <div id="edit_dog_appointment_link">
      <%= link_to " [ EDIT / DELETE APPOINTMENT ] ", edit_dog_appointment_path(@dog, appointment) %>
    </div>

    </div>
  <% end %>
